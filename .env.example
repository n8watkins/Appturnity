# Resend API Key (Get yours at https://resend.com)
RESEND_API_KEY=re_your_api_key_here

# Email address to receive contact form submissions
CONTACT_EMAIL=your-email@example.com

# reCAPTCHA v3 Keys (Get yours at https://www.google.com/recaptcha/admin)
# Frontend site key (public)
VITE_RECAPTCHA_SITE_KEY=your_site_key_here
# Backend secret key (keep private!)
RECAPTCHA_SECRET_KEY=your_secret_key_here

# Frontend URL for CORS (production only, optional)
# FRONTEND_URL=https://yourdomain.com

# Node environment
NODE_ENV=development
